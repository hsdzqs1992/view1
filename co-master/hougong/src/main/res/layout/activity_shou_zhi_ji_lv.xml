<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_jiao_yi_ji_lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.hougong.view.JiaoYiJiLvActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/home_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/person_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back"/>


        <TextView
            android:id="@+id/mywalot_qianbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:text="收支记录"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:gravity="center"
        android:id="@+id/self_create_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        >


        <com.zhuye.hougong.weidgt.PagerSlidingTabStrip
            android:id="@+id/tab_strip"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:fillViewport="false"
            app:pstsIndicatorHeight="3dp"
            app:pstsTabPaddingLeftRight="30dp"
            />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/jiiiaoyijilv_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
